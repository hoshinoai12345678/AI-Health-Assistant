/* pages/profile/profile.wxss */
.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 40rpx;
}

.login-section {
  background: white;
  border-radius: 20rpx;
  padding: 80rpx 40rpx;
  text-align: center;
  margin-bottom: 40rpx;
}

.avatar-placeholder {
  width: 160rpx;
  height: 160rpx;
  margin: 0 auto 30rpx;
  background: #f0f0f0;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 80rpx;
}

.login-tip {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 40rpx;
}

.login-btn {
  width: 400rpx;
  height: 80rpx;
  background: #1AAD19;
  color: white;
  border-radius: 40rpx;
  font-size: 32rpx;
  line-height: 80rpx;
}

.user-section {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 20rpx;
  padding: 60rpx 40rpx;
  display: flex;
  align-items: center;
  margin-bottom: 40rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 30rpx;
}

.user-info {
  color: white;
}

.nickname {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.role {
  font-size: 26rpx;
  opacity: 0.9;
}

.menu-list {
  background: white;
  border-radius: 20rpx;
  overflow: hidden;
  margin-bottom: 40rpx;
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 40rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
}

.menu-text {
  flex: 1;
  font-size: 32rpx;
  color: #333;
}

.menu-arrow {
  font-size: 48rpx;
  color: #ccc;
}

.logout-btn {
  width: 100%;
  height: 88rpx;
  background: white;
  color: #ff4444;
  border-radius: 20rpx;
  font-size: 32rpx;
  line-height: 88rpx;
}
