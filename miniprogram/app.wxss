/* app.wxss */
page {
  background-color: #f5f5f5;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen',
    'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue',
    sans-serif;
}

.container {
  box-sizing: border-box;
}

/* 通用按钮样式 */
button {
  border: none;
  outline: none;
}

button::after {
  border: none;
}

/* 通用文本样式 */
text {
  display: inline-block;
}

/* 通用输入框样式 */
input {
  outline: none;
}
